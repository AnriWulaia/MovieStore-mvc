@model MovieStoreMvc.Models.Domain.Movie
@{
    ViewData["Title"] = $"{Model.Title}";
}

<h1 class="card-title-movie">@Model.Title</h1>
<p class="releaseYear">@Model.ReleaseYear</p>
<div class="card flex-sm-column movie-details d-flex container" >
    <div class="row">
        <div class="col-md-4">
            <div class="movieImage">
                <img class="img" src="/Uploads/@Model.MovieImage" alt="Movie Image" style="width: 100%; max-height:530px; object-fit:contain" />
            </div>
        </div>
        <div class="col-md-8 trailer">
            <div class="ratio ratio-16x9">
                <iframe class="embed-responsive-item" src="@Model.VideoUrl" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>


<div class="container mt-5 infoBox">
    <hr style="height:3px;"/>
    <h5><span class="fw-bold">Director: </span><a style="color:#0d6efd;">@Model.Director</a></h5>
    <hr style="height:3px;" />
    <h5><span class="fw-bold">Stars: </span><a style="color:#0d6efd;">@Model.Cast</a></h5>
    <hr style="height:3px;" />
    <h5><span class="fw-bold">Genres: </span><a style="color:#0d6efd;">@Model.GenreNames</a></h5>           
    <a href="/Home" class="btn btn-warning mt-3 px-4 py-2 fw-bold">Back</a>

</div>