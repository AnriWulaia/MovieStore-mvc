@model MovieStoreMvc.Models.DTO.LoginModel
@{
}

<form class="w-75" method="post" asp-action="Login">
    <h2 class="pb-10">Login</h2>
    <div class="form-floating">
        <input asp-for="Username" class="form-control" aria-required="true" />
        <label asp-for="Username" class="form-label"></label>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-floating mt-2">
        <input asp-for="Password" type="password" class="form-control" aria-required="true" />
        <label asp-for="Password" class="form-label"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mt-2">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-sec mt-2" type="submit">Login</button>
    </div>
</form>