@model MovieStoreMvc.Models.DTO.MovieListVm

<table>
    <caption>Movies</caption>
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Genre</th>
            <th scope="col">Image</th>
            <th scope="col">Release Year</th>
            <th scope="col">Cast</th>
            <th scope="col">Director</th>
            <th scope="col">Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.MovieList)
        {
            <tr>
                <td scope="row" data-label="Title">@item.Title</td>
                <td data-label="Genre">
                    <ul style="list-style-type:none; padding:0; margin:0;">
                    @foreach (string word in item.GenreNames.Split(new[] { "\n", "\r\n" }, StringSplitOptions.RemoveEmptyEntries))
                    {
                        <li >@word</li>
                    }
                    </ul>
                </td>
                <td data-label="Image"><img src="/Uploads/@item.MovieImage" style="width: 100px; height:auto;" /></td>
                <td data-label="Release Year">@item.ReleaseYear</td>
                <td data-label="Cast">@item.Cast</td>
                <td data-label="Director">@item.Director</td>
                <td data-label="Action">
                    <a href="/Movie/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a href="/Movie/Delete?id=@item.Id" onclick="return window.confirm('Are you sure?')" class="btn btn-default"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-2">
    <a href="/Movie/Add" class="btn btn-warning">Back</a>
</div>



